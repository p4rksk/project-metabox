<script>
    let isMovieScrapped = false;

    function scrapButton() {
        if (isMovieScrapped) {
            if (confirm("찜하시겠습니까?")) {
                document.getElementById('myButton').classList.add('clicked');
                alert("기대되는 영화에 추가되었습니다.");
                isMovieScrapped = true;
            } else {
                alert("취소되었습니다.");
            }
        } else {
            if (confirm("찜하기를 취소하시겠습니까?")) {
                document.getElementById('myButton').classList.remove('clicked');
                alert("취소되었습니다.");
                isMovieScrapped = false;
            } else {
                alert("찜하기를 유지합니다.");
            }
        }
    }
</script>
<script>
    const modalOpenButton = document.getElementById('modalOpenButton');
    const modalCloseButton = document.getElementById('modalCloseButton');
    const modal = document.getElementById('modalContainer');

    modalOpenButton.addEventListener('click', () => {
        modal.classList.remove('hidden');
    });

    modalCloseButton.addEventListener('click', () => {
        modal.classList.add('hidden');
    });
</script>
<script>
    const stars = document.querySelectorAll('.star');

    stars.forEach(star => {
        star.addEventListener('change', function() {
            const value = parseInt(this.value);
            stars.forEach((s, index) => {
                if (index < value) {
                    s.nextElementSibling.textContent = '★';
                } else {
                    s.nextElementSibling.textContent = '☆';
                }
            });
        });
    });
</script>
